x=[1,2,3,4];

h=[2,1,0,-1];

y=conv(x,h);

disp(First squence(x):');

disp(x);

disp(Second squence(h):');

disp(h);

disp('Result squence(y):);

disp(y);

figure;

subplot(3,1,1);

stem(x);

title('First sequence(x)');

xlabel('n');

ylabel('x[n]');

subplot(3,1,2);

stem(h);

title('Second sequence(h)');

xlabel('n');

ylabel('h[n]');

subplot(3,1,3);

stem(h);

title('Convolution Result(y));

xlabel('n');

ylabel('y[n]');
